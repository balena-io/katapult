{
    "title": "Config manifest schema",
    "description": "Config Manifest schema",
    "type": "object",
    "properties": {
        "version": {
            "type": "string"
        },
        "title": {
            "type": "string"
        },
        "properties": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/ConfigManifestKeys"
            }
        }
    },
    "definitions": {
        "ConfigManifestKeys": {
            "patternProperties": {
                "^[A-Za-z0-9_-]+$": {
                    "$ref": "#/definitions/ConfigManifestItem"
                }
            },
            "additionalProperties": false
        },
        "ConfigManifestItem": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "string",
                        "string?",
                        "number",
                        "number?",
                        "integer",
                        "integer?",
                        "boolean",
                        "boolean?"
                    ]
                },
                "description": {
                    "type": "string"
                },
                "maxLength": {
                    "type": "number"
                },
                "minLength": {
                    "type": "number"
                },
                "pattern": {
                    "type": "string"
                },
                "placeholder": {
                    "type": "string"
                }
            },
            "required": [
                "type"
            ],
            "additionalProperties": false
        }
    },
    "required": [
        "version",
        "title",
        "properties"
    ],
    "additionalProperties": false
}
